<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 注解、扫包、读取配置文件内容-->
    <import resource="classpath:/spring/base-context.xml"/>
    <!--数据源配置-->
    <import resource="classpath:/spring/db-context.xml"/>
    <!--MyBatis配置 -->
    <import resource="classpath:/spring/db-mybatis.xml"/>
    <!--事务管理配置-->
    <import resource="classpath:/spring/transaction.xml"/>
    <!--Redis相关配置-->
    <import resource="classpath:/spring/db-redis.xml"/>
</beans>
